<h1>Task <%= @task.title %></h1>

<%= link_to "Edit this task", edit_task_path(@task), class:"btn btn-primary" %>

<ul>
  <li>Details: <%= @task.details %></li>
  <li>Status:
    <% if @task.completed == true %>
      <%= "Done" %>
    <% elsif %>
      <%= "Not done yet" %>
    <% end %>
    </li>
</ul>

<%= link_to "Back to list", tasks_path %>
