<h1>Update a new task!</h1>

<form action="/tasks/<%= @task.id %>" method="patch">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <ul>
    <li><label for="title">Title</label>
    <input type="text" name="task[title]" value="<%= @task.title %>"></li>
    <li><label for="details">Details</label>
    <input type="text" name="task[details]" value="<%= @task.details %>"></li>
    <li><label for="status">Done</label><%= check_box_tag('Status', value = "1", checked = false, options = {}) %></li>
  </ul>
  <input type="submit">
</form>

<%= link_to "Back to list", tasks_path %>
