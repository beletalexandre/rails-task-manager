<h1>All tasks</h1>

  <ul>
  <% @tasks.each do |task| %>
    <li><input type="checkbox" id="scales" name="scales">
      <%= link_to task.title, task_path(task) %>
      <%= link_to "",
          tasks_path(task),
          class: "fa fa-trash",
          method: :delete,
          data: { confirm: "Are your sure you want to delete this task?" } %></li>
    <% end %>
  </ul>

<%= link_to "Add a new task", new_task_path %>
